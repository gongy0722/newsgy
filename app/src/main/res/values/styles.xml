<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="WelcomeBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="WelcomeBase.Rel">
        <item name="android:layout_marginBottom">50dp</item>
    </style>

    <style name="WelcomeButton" parent="WelcomeBase">

        <item name="android:background">@drawable/welcome_btn_selector</item>
        <item name="android:layout_marginBottom">80dp</item>
    </style>


    <style name="baseStyle" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">1dp</item>
    </style>
    <!-- 样式支持继承 -->
    <style name="btnStyle" parent="baseStyle">
        <!-- 文字居中对齐 -->
        <item name="android:gravity">center_horizontal</item>
        <!-- 取消单选按钮 -->
        <item name="android:button">@null</item>

    </style>

</resources>
